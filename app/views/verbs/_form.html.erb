<%= form_tag("/create", method: "post") do %>
  <div class="row basic_verb">

    <div class="large-6 columns">
      <%= label_tag :infinitive %>
      <%= text_field_tag :infinitive %>
    </div>
    <div class="large-6 columns">
      <%= label_tag :group %>
      <%= select_tag(:group, options_for_select([['I', 1], ['II', 2], ['III', 3]]), :class=>'select_group') %>
    </div>

  </div>

  <% @times.each_with_index do |time, index| %>
    <% if (index%3) == 0 %>
      <div class="row">
    <% end %>
        <div class="large-4 columns">
            <h3><%= time %></h3>
              <%= label_tag :je %><% name = time + "__je" %> <%= text_field_tag name %>
              <%= label_tag :tu %> <% name = time + "__tu" %> <%= text_field_tag name %>
              <%= label_tag :il_elle %> <% name = time + "__il" %> <%= text_field_tag name %>
              <%= label_tag :nous %> <% name = time + "__nous" %> <%= text_field_tag name %>
              <%= label_tag :vous %> <% name = time + "__vous" %> <%= text_field_tag name %>
              <%= label_tag :ils %> <% name = time + "__ils" %> <%= text_field_tag name %>
        </div>
      <% if (index%3) == 2 %>
        </div>
      <% end %>
  <% end %>
  </div>
  <div class="row">
  <%= submit_tag "Add"%>
  </div>
<% end %>